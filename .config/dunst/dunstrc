# See dunst(5) for all configuration options

[global]
    ### Display ###

    monitor = 0
    enable_posix_regex = true

    ### Geometry ###

    width = (500, 600)
    height = (100, 200)

    origin = bottom-right
    offset = (40, 80)

    ### Progress bar ###

    progress_bar = true

    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 0

    icon_corner_radius = 5

    indicate_hidden = no

    frame_width = 2
    transparency = 0

    gap_size = 4
    padding = 5

    horizontal_padding = 8

    text_icon_padding = 5

    sort = yes

    ### Text ###

    font = JetBrainsMono NFP 14

    line_height = 0

    markup = full
    format = "Alert - %a\n\n<b>%s</b>\n%b"

    alignment = center
    vertical_alignment = top
    show_age_threshold = -1

    ignore_newline = no
    show_indicators = no

    ### Icons ###

    enable_recursive_icon_lookup = true
    icon_theme = Adwaita
    icon_position = left
    min_icon_size = 30
    max_icon_size = 100

    ### History ###

    sticky_history = true
    history_length = 20

    ### Misc/Advanced ###

    title = Dunst
    class = Dunst

    corner_radius = 0

    ignore_dbusclose = false

    ### Wayland ###

    force_xwayland = false

    ### Legacy

    force_xinerama = false

    ### Mouse

    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = context

[experimental]

    per_monitor_dpi = false

### Colors

[urgency_low]
    background = "#666666"
    foreground = "#ffffff"
    frame_color = "#000000"
    timeout = 5

[urgency_normal]
    background = "#666666"
    foreground = "#ffffff"
    frame_color = "#000000"
    timeout = 5

[urgency_critical]
    background = "#666666"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    timeout = 0

### Filtering

[discord]
	appname = discord
	urgency = normal
	set_stack_tag = "volume"
	fullscreen = show
